<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutCreate"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout   android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/userPhotoCreateImageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center"
                android:src="@mipmap/default_profile_photo_round"
                android:layout_margin="10dp"
                app:civ_border_width="2dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/nameCreateTextInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="30"
                    android:hint="@string/name_textview_title"
                    android:inputType="textPersonName"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textColor="@color/colorPrimaryDark" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/surnameCreateTextInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="30"
                    android:hint="@string/surname_textview_title"
                    android:inputType="textPersonName"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textColor="@color/colorPrimaryDark" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/phoneNumberCreateTextInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="30"
                    android:hint="@string/phone_number_textview_title"
                    android:inputType="phone"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textColor="@color/colorPrimaryDark" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/emailCreateTextInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="30"
                    android:hint="@string/email_textview_title"
                    android:inputType="textEmailAddress"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textColor="@color/colorPrimaryDark" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/passwordCreateTextInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="30"
                    android:hint="@string/password_textview_title"
                    android:inputType="textPassword"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textColor="@color/colorPrimaryDark" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/createProfileButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/save_button_title"
                android:textAllCaps="false"
                android:layout_margin="16dp"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/CreateProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>
</ScrollView>